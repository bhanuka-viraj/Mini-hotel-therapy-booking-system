# Example environment variables for development
# Copy this file to .env and replace example values with real secrets

# Server
PORT=8080
NODE_ENV=development

# MongoDB connection (replace with your connection string)
MONGO_URI=mongodb://localhost:27017/learnvia

# JWT secret used to sign application tokens (use a long random value in production)
JWT_SECRET=replace_with_a_long_random_secret_here

# Google OAuth configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# The redirect URI that Google will call after user authorizes.
# For server-side flows this should point to your backend callback endpoint
# e.g. http://localhost:8080/api/v1/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# Frontend origin used for default redirects
FRONTEND_ORIGIN=http://localhost:3000

# Comma-separated whitelist of allowed client redirect URIs (exact match required)
# Include web and mobile deep link URIs you control, e.g. http://localhost:3000,myapp://auth
CLIENT_REDIRECT_WHITELIST=http://localhost:3000,myapp://auth

# Optional: logging level
LOG_LEVEL=debug
SEED_USERS_COUNT=20
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
